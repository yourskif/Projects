@model BookStore.Models.Book

<h2>Додати книгу</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PageCount"></label>
        <input asp-for="PageCount" type="number" class="form-control" />
        <span asp-validation-for="PageCount" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <select asp-for="Genre" asp-items="@(new SelectList(Enum.GetValues(typeof(GenreEnum))))" class="form-control"></select>
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
