@model BookStore.Models.Book

<h2>Видалити книгу</h2>

<h3>Ви впевнені, що хочете видалити цю книгу?</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Назва</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Жанр</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Кількість сторінок</dt>
        <dd class="col-sm-10">@Model.PageCount</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Видалити</button>
        <a asp-action="Index" asp-route-authorId="@Model.AuthorId" class="btn btn-secondary">Скасувати</a>
    </form>
</div>