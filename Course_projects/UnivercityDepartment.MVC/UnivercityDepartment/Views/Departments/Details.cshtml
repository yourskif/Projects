@model UnivercityDepartment.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<h2>@Model.DepartmentName</h2>

<div>
    <h3>Faculty: @Model.Faculty.FacultyName</h3>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.DepartmentId" class="btn btn-danger">Delete</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
