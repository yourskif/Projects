@{
    ViewData["Title"] = "Головна сторінка";
}

<div class="container">
    <div class="text-center my-5">
        <h1 class="display-4">Вітаємо у системі університету</h1>
        <p class="lead">Переглядайте департаменти, факультети, студентів та викладачів.</p>
    </div>

    <div class="row">
        <!-- Секція факультетів -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title">Факультети</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Перегляньте список факультетів університету.</p>
                    <a href="/Faculties/Index" class="btn btn-primary">Переглянути</a>
                </div>
            </div>
        </div>

        <!-- Секція департаментів -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title">Департаменти</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Ознайомтеся зі списком департаментів.</p>
                    <a href="/Departments/Index" class="btn btn-success">Переглянути</a>
                </div>
            </div>
        </div>

        <!-- Секція студентів -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title">Студенти</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Перегляньте список студентів університету.</p>
                    <a href="/Students/Index" class="btn btn-info">Переглянути</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Секція викладачів -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title">Викладачі</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Ознайомтеся з викладачами університету.</p>
                    <a href="/Teachers/Index" class="btn btn-warning">Переглянути</a>
                </div>
            </div>
        </div>

        <!-- Секція контактів -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title">Контакти</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Отримайте інформацію про університет.</p>
                    <a href="/Home/Contact" class="btn btn-dark">Дізнатися більше</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Менеджер файлів -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="card-title">Менеджер файлів</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UploadFile" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="file" class="form-label">Завантажте JSON-файл</label>
                            <input type="file" class="form-control" id="file" name="file" accept=".json" />
                        </div>
                        <button type="submit" class="btn btn-success">Завантажити</button>
                    </form>
                    <hr />
                    <a href="/Home/DownloadFile" class="btn btn-info">Вигрузити JSON-файл</a>
                </div>
            </div>
        </div>
    </div>
</div>
