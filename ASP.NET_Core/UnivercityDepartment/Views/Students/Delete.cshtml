@model UnivercityDepartment.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h1>Delete Student</h1>

<h3>Are you sure you want to delete this student?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>
        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Faculty</dt>
        <dd class="col-sm-10">@Model.Faculty?.FacultyName ?? "N/A"</dd> <!-- Перевірка на null -->
        <dt class="col-sm-2">Department</dt>
        <dd class="col-sm-10">@Model.Department?.DepartmentName ?? "N/A"</dd> <!-- Перевірка на null -->
    </dl>

    <form method="post" asp-action="Delete" asp-route-id="@Model.StudentId">
        <input type="hidden" name="id" value="@Model.StudentId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>



</div>

