@model IEnumerable<UnivercityDepartment.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Department</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Department Name</th>
            <th>Faculty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.DepartmentName</td>
                <td>@department.Faculty?.FacultyName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.DepartmentId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.DepartmentId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>





