@model UnivercityDepartment.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h1>Delete Teacher</h1>

<h3>Are you sure you want to delete this teacher?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <p><strong>Department:</strong> @Model.Department?.DepartmentName</p>
    <p><strong>Faculty:</strong> @Model.Faculty?.FacultyName</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TeacherId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>