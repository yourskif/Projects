@model IEnumerable<UnivercityDepartment.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<h1>Teachers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Teacher</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Department</th>
            <th>Faculty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)

        {
            <tr>
                <td>@teacher.FirstName</td>
                <td>@teacher.LastName</td>
                <td>@teacher.Department?.DepartmentName</td>
                <td>@teacher.Faculty?.FacultyName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
