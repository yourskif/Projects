@model IEnumerable<UnivercityDepartment.Models.Faculty>

@{
    ViewData["Title"] = "Faculties";
}

<h1>Faculties</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Faculty</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Faculty Name</th>
            <th>Number of Departments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faculty in Model)
        {
                <tr>
                    <td>@faculty.FacultyName</td>
                    <td>@faculty.Departments?.Count ?? 0</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@faculty.FacultyId" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@faculty.FacultyId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@faculty.FacultyId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>



